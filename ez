local notifCloseTween = TweenService:Create(
    NotificationFrame,
    TweenInfo.new(0.5, Enum.EasingStyle.Back, Enum.EasingDirection.In),
    {Size = UDim2.new(0, 0, 0, 0), Position = UDim2.new(0.5, 0, 0, -100)}
)
notifCloseTween:Play()
notifCloseTween.Completed:Connect(function()
    NotificationFrame:Destroy()
end)
