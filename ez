-- Function to create Tab Button
local currentTab = "Scripts"
local function createTabButton(name, icon)
    local TabButton = Instance.new("TextButton")
    TabButton.Name = name .. "Tab"
    TabButton.Size = UDim2.new(0, 120, 1, 0)
    TabButton.BackgroundColor3 = name == currentTab and Color3.fromRGB(220, 38, 38) or Color3.fromRGB(30, 30, 30)
    TabButton.BorderSizePixel = 0
    TabButton.AutoButtonColor = false
    TabButton.Text = ""
    TabButton.Parent = TabContainer
    
    local TabCorner = Instance.new("UICorner")
    TabCorner.CornerRadius = UDim.new(0, 10)
    TabCorner.Parent = TabButton
    
    local TabGradient = Instance.new("UIGradient")
    if name == currentTab then
        TabGradient.Color = ColorSequence.new{
            ColorSequenceKeypoint.new(0, Color3.fromRGB(220, 38, 38)),
            ColorSequenceKeypoint.new(1, Color3.fromRGB(139, 0, 0))
        }
    else
        TabGradient.Color = ColorSequence.new{
            ColorSequenceKeypoint.new(0, Color3.fromRGB(30, 30, 30)),
            ColorSequenceKeypoint.new(1, Color3.fromRGB(20, 20, 20))
        }
    end
    TabGradient.Rotation = 45
    TabGradient.Parent = TabButton
    
    local TabLabel = Instance.new("TextLabel")
    TabLabel.Size = UDim2.new(1, 0, 1, 0)
    TabLabel.BackgroundTransparency = 1
    TabLabel.Text = icon .. " " .. name
    TabLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
    TabLabel.TextSize = 16
    TabLabel.Font = Enum.Font.GothamBold
    TabLabel.Parent = TabButton
    
    TabButton.MouseButton1Click:Connect(function()
        if currentTab ~= name then
            currentTab = name
            
            -- Animate all tabs
            for _, tab in pairs(TabContainer:GetChildren()) do
                if tab:IsA("TextButton") then
                    local gradient = tab:FindFirstChildOfClass("UIGradient")
                    if tab.Name == name .. "Tab" then
                        TweenService:Create(tab, TweenInfo.new(0.3), {BackgroundColor3 = Color3.fromRGB(220, 38, 38)}):Play()
                        if gradient then
                            gradient.Color = ColorSequence.new{
                                ColorSequenceKeypoint.new(0, Color3.fromRGB(220, 38, 38)),
                                ColorSequenceKeypoint.new(1, Color3.fromRGB(139, 0, 0))
                            }
                        end
                    else
                        TweenService:Create(tab, TweenInfo.new(0.3), {BackgroundColor3 = Color3.fromRGB(30, 30, 30)}):Play()
                        if gradient then
                            gradient.Color = ColorSequence.new{
                                ColorSequenceKeypoint.new(0, Color3.fromRGB(30, 30, 30)),
                                ColorSequenceKeypoint.new(1, Color3.fromRGB(20, 20, 20))
                            }
                        end
                    end
                end
            end
            
            -- Switch content with animation
            if name == "Scripts" then
                local fadeOut = TweenService:Create(MiscContent, TweenInfo.new(0.2), {BackgroundTransparency = 1})
                fadeOut:Play()
                fadeOut.Completed:Connect(function()
                    MiscContent.Visible = false
                    ScriptsContent.Visible = true
                    TweenService:Create(ScriptsContent, TweenInfo.new(0.2), {BackgroundTransparency = 1}):Play()
                end)
            else
                local fadeOut = TweenService:Create(ScriptsContent, TweenInfo.new(0.2), {BackgroundTransparency = 1})
                fadeOut:Play()
                fadeOut.Completed:Connect(function()
                    ScriptsContent.Visible = false
                    MiscContent.Visible = true
                    TweenService:Create(MiscContent, TweenInfo.new(0.2), {BackgroundTransparency = 1}):Play()
                end)
            end
        end
    end)
    
    return TabButton
end

-- Create Tabs
createTabButton("Scripts", "üéÆ")
createTabButton("Misc", "‚ÑπÔ∏è")

-- Function to create script button (NO ANIMATIONS)
local function createScriptButton(title, description, url)
    local Button = Instance.new("TextButton")
    Button.Name = title
    Button.Size = UDim2.new(1, 0, 0, 75)
    Button.BackgroundColor3 = Color3.fromRGB(25, 25, 25)
    Button.BorderSizePixel = 0
    Button.AutoButtonColor = false
    Button.Text = ""
    Button.Parent = ScriptsContent
    
    local ButtonCorner = Instance.new("UICorner")
    ButtonCorner.CornerRadius = UDim.new(0, 12)
    ButtonCorner.Parent = Button
    
    local ButtonStroke = Instance.new("UIStroke")
    ButtonStroke.Color = Color3.fromRGB(220, 38, 38)
    ButtonStroke.Thickness = 1
    ButtonStroke.Transparency = 0.7
    ButtonStroke.Parent = Button

    local ButtonGradient = Instance.new("UIGradient")
    ButtonGradient.Color = ColorSequence.new{
        ColorSequenceKeypoint.new(0, Color3.fromRGB(30, 30, 30)),
        ColorSequenceKeypoint.new(1, Color3.fromRGB(15, 15, 15))
    }
    ButtonGradient.Rotation = 45
    ButtonGradient.Parent = Button
    
    -- Icon
    local Icon = Instance.new("TextLabel")
    Icon.Size = UDim2.new(0, 50, 0, 50)
    Icon.Position = UDim2.new(0, 12, 0.5, -25)
    Icon.BackgroundColor3 = Color3.fromRGB(220, 38, 38)
    Icon.Text = "üéÆ"
    Icon.TextColor3 = Color3.fromRGB(255, 255, 255)
    Icon.TextSize = 24
    Icon.Font = Enum.Font.GothamBold
    Icon.BorderSizePixel = 0
    Icon.Parent = Button
    
    local IconCorner = Instance.new("UICorner")
    IconCorner.CornerRadius = UDim.new(0, 10)
    IconCorner.Parent = Icon
    
    local IconGradient = Instance.new("UIGradient")
    IconGradient.Color = ColorSequence.new{
        ColorSequenceKeypoint.new(0, Color3.fromRGB(220, 38, 38)),
        ColorSequenceKeypoint.new(1, Color3.fromRGB(139, 0, 0))
    }
    IconGradient.Rotation = 45
    IconGradient.Parent = Icon
    
    -- Title
    local ButtonTitle = Instance.new("TextLabel")
    ButtonTitle.Size = UDim2.new(1, -80, 0, 25)
    ButtonTitle.Position = UDim2.new(0, 70, 0, 12)
    ButtonTitle.BackgroundTransparency = 1
    ButtonTitle.Text = title
    ButtonTitle.TextColor3 = Color3.fromRGB(255, 255, 255)
    ButtonTitle.TextSize = 16
    ButtonTitle.Font = Enum.Font.GothamBold
    ButtonTitle.TextXAlignment = Enum.TextXAlignment.Left
    ButtonTitle.Parent = Button
    
    -- Description
    local ButtonDesc = Instance.new("TextLabel")
    ButtonDesc.Size = UDim2.new(1, -80, 0, 20)
    ButtonDesc.Position = UDim2.new(0, 70, 0, 42)
    ButtonDesc.BackgroundTransparency = 1
    ButtonDesc.Text = description
    ButtonDesc.TextColor3 = Color3.fromRGB(150, 150, 150)
    ButtonDesc.TextSize = 12
    ButtonDesc.Font = Enum.Font.Gotham
    ButtonDesc.TextXAlignment = Enum.TextXAlignment.Left
    ButtonDesc.Parent = Button
    
    -- Click Function (NO ANIMATIONS)
    Button.MouseButton1Click:Connect(function()
        local success = pcall(function()
            loadstring(game:HttpGet(url))()
        end)
        
        if success then
            local closeTween = TweenService:Create(
                MainFrame,
                TweenInfo.new(0.5, Enum.EasingStyle.Back, Enum.EasingDirection.In),
                {Size = UDim2.new(0, 0, 0, 0)}
            )
            closeTween:Play()
            closeTween.Completed:Connect(function()
                ScreenGui:Destroy()
            end)
        end
    end)
end

