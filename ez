-- Animate Border Glow
spawn(function()
    while MainFrame.Parent do
        TweenService:Create(
            MainStroke,
            TweenInfo.new(2, Enum.EasingStyle.Sine, Enum.EasingDirection.InOut),
            {Transparency = 0}
        ):Play()
        wait(2)
        TweenService:Create(
            MainStroke,
            TweenInfo.new(2, Enum.EasingStyle.Sine, Enum.EasingDirection.InOut),
            {Transparency = 0.3}
        ):Play()
        wait(2)
    end
end)

